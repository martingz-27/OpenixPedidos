@model Modelo.Models.Guarnicion
@{
                ViewBag.Title = "NewGuarnicion";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Guarniciones</h2>

@using (Html.BeginForm("Create", "Guarnicion"))
{
    <div class="form-group">
        @Html.LabelFor(m => m._NombreGuarnicion)
        @Html.TextBoxFor(m => m._NombreGuarnicion, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(m => m._Cantidad)
        </label>
        @{List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "1",
                Value = "1"
            });
            listItems.Add(new SelectListItem
            {
                Text = "2",
                Value = "2"
            });
        }

        @Html.DropDownListFor(m => m._Cantidad, listItems, "Seleccione Cantidad", htmlAttributes: new { @class = "form-control" })

    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>

}